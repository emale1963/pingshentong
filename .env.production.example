# ===========================================
# 生产环境配置文件示例
# 请复制此文件为 .env.production 并修改对应值
# ===========================================

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=report_review
DB_USER=review_user
DB_PASSWORD=your_secure_password_here

# ===========================================
# 对象存储配置（AWS S3 或兼容服务）
# ===========================================
# 访问密钥 ID
AWS_ACCESS_KEY_ID=your_access_key_id_here

# 访问密钥（请妥善保管，不要泄露）
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# 区域（例如：cn-north-1, us-east-1）
AWS_REGION=cn-north-1

# S3 端点（如果使用非 AWS S3 服务，请填写对应端点）
# AWS_S3_ENDPOINT=https://s3.example.com

# 存储桶名称
S3_BUCKET_NAME=your-bucket-name

# ===========================================
# AI 服务配置
# ===========================================
# AI 服务 API 密钥
AI_API_KEY=your_ai_api_key_here

# AI 服务 API URL
AI_API_URL=https://api.example.com

# AI 模型名称（可选）
AI_MODEL_NAME=model-name

# 请求超时时间（毫秒）
AI_TIMEOUT=60000

# ===========================================
# 应用配置
# ===========================================
# 运行环境（固定为 production）
NODE_ENV=production

# 应用运行端口（默认 3000）
PORT=3000

# 应用 URL（用于生成完整链接）
APP_URL=http://14.103.72.48

# ===========================================
# 安全配置
# ===========================================
# JWT 密钥（用于生成和管理令牌，请使用强随机字符串）
JWT_SECRET=your_very_long_random_jwt_secret_key_here_minimum_32_characters

# Session 密钥
SESSION_SECRET=your_session_secret_key_here

# Cookie 密钥（加密使用）
COOKIE_SECRET=your_cookie_secret_key_here

# ===========================================
# 管理员账户配置（首次初始化使用）
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# ===========================================
# 文件上传配置
# ===========================================
# 最大文件大小（字节）
MAX_FILE_SIZE=104857600

# 允许的文件类型
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png

# ===========================================
# 日志配置
# ===========================================
# 日志级别（error, warn, info, debug）
LOG_LEVEL=info

# 日志文件路径
LOG_DIR=/var/www/ai-review-system/logs

# ===========================================
# 性能配置
# ===========================================
# 数据库连接池最大连接数
DB_POOL_MAX=20

# 数据库连接池最小连接数
DB_POOL_MIN=5

# 数据库连接空闲超时（毫秒）
DB_POOL_IDLE_TIMEOUT=30000

# 数据库连接超时（毫秒）
DB_CONNECTION_TIMEOUT=2000

# ===========================================
# 缓存配置（可选）
# ===========================================
# Redis 主机（如果使用 Redis）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ===========================================
# 通知配置（可选）
# ===========================================
# 邮件服务器配置（用于发送通知）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@example.com

# ===========================================
# 其他配置
# ===========================================
# API 速率限制（每分钟请求数）
RATE_LIMIT=60

# CORS 允许的源（多个用逗号分隔）
CORS_ORIGINS=http://14.103.72.48

# 是否启用调试模式（生产环境请设为 false）
DEBUG=false
